<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.SavedRecipesPage"
             Title="Saved Recipes">

    <StackLayout Padding="10">
        <Label Text="Your Saved Recipes" FontSize="20" HorizontalOptions="Center" />

        <ListView x:Name="SavedRecipesListView" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Ingredients}" FontSize="Small" />
                            <Button Text="Remove"
                                    Clicked="OnRemoveRecipeClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="DarkRed"
                                    TextColor="White"
                                    CornerRadius="5"
                                    Margin="0,5,0,0"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
