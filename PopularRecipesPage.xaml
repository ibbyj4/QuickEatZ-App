<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.PopularRecipesPage"
             Title="Popular Recipes">

    <StackLayout Padding="10">
        <Label Text="Popular Recipes" FontSize="20" HorizontalOptions="Center" />

        <ListView x:Name="PopularRecipesListView" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Ingredients}" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
